#gruvbox
#color activeborder   '#ebdbb2'
#color inactiveborder '#4c566a'

#color activeborder   '#eceff4'
#color inactiveborder '#1d2021'

# nord
color activeborder   '#88c0d0'
color inactiveborder '#4c566a'

borderwidth     1
gap	        20 0 0 0
moveamount      10
sticky yes

ignore  polybar

autogroup 0 xfdesktop
autogroup 0 xfce4-panel

wm xfce         /usr/bin/xfwm4
wm i3           /usr/bin/i3

unbind-key	all

bind-key    CSM-q      	    quit
bind-key    4S-r            restart
bind-key    4-p             "rofi -show drun"
bind-key    4-Return        terminator

bind-key    4-q             window-delete
bind-key    4-c             window-hide

bind-key    4-h             window-move-left
bind-key    4-j             window-move-down
bind-key    4-k             window-move-up
bind-key    4-l             window-move-right
bind-key    S4-h            window-move-left-big
bind-key    S4-j            window-move-down-big
bind-key    S4-k            window-move-up-big
bind-key    S4-l            window-move-right-big

bind-key    4C-h            window-snap-left
bind-key    4C-j            window-snap-down
bind-key    4C-k            window-snap-up
bind-key    4C-l            window-snap-right

bind-key    4-y             window-resize-left
bind-key    4-u             window-resize-down
bind-key    4-i             window-resize-up
bind-key    4-o             window-resize-right
bind-key    S4-y            window-resize-left-big	
bind-key    S4-u            window-resize-down-big
bind-key    S4-i            window-resize-up-big
bind-key    S4-o            window-resize-right-big

bind-key    4-Tab	    window-cycle
bind-key    4S-Tab	    window-rcycle
bind-key    M-Tab	    window-cycle-ingroup
bind-key    MS-Tab          window-rcycle-ingroup

bind-key    4-f	            window-maximize
bind-key    4S-f            window-fullscreen

bind-key    4-m             window-hmaximize
bind-key    4-n             window-vmaximize

bind-key    4-t	            window-vtile
bind-key    4S-t            window-htile

bind-key    4-1     	    group-only-1
bind-key    4-2             group-only-2
bind-key    4-3             group-only-3
bind-key    4-4	            group-only-4
bind-key    4-5	            group-only-5
bind-key    4-6	            group-only-6
bind-key    4-7	            group-only-7
bind-key    4-8	            group-only-8
bind-key    4-9	            group-only-9
bind-key    4-0             window-group

bind-key    C4-1            group-toggle-1
bind-key    C4-2            group-toggle-2
bind-key    C4-3            group-toggle-3
bind-key    C4-4            group-toggle-4
bind-key    C4-5            group-toggle-5
bind-key    C4-6            group-toggle-6
bind-key    C4-7            group-toggle-7
bind-key    C4-8            group-toggle-8
bind-key    C4-9            group-toggle-9
bind-key    C4-0            group-toggle-all

bind-key    4S-1            window-movetogroup-1
bind-key    4S-2            window-movetogroup-2
bind-key    4S-3            window-movetogroup-3
bind-key    4S-4            window-movetogroup-4
bind-key    4S-5            window-movetogroup-5
bind-key    4S-6            window-movetogroup-6
bind-key    4S-7            window-movetogroup-7
bind-key    4S-8            window-movetogroup-8
bind-key    4S-9            window-movetogroup-9

bind-key    XF86MonBrightnessUp	        "xbacklight -inc 10"
bind-key    XF86MonBrightnessDown       "xbacklight -dec 10"
bind-key    XF86AudioMute               "pactl set-sink-mute 0 toggle"
bind-key    XF86AudioRaiseVolume        "pactl set-sink-volume 0 +5%"
bind-key    XF86AudioLowerVolume        "pactl set-sink-volume 0 -5%"

unbind-mouse all

bind-mouse 4-1  window-move
bind-mouse 4-2  window-hide
bind-mouse 4-3  window-resize

