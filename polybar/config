# Custom VPN module. Always assume Seattle.
[module/vpn]
type = custom/script
format = <label>

label =  Seattle
label-padding = 1

exec = echo vpn connected
exec-if = pgrep openvpn

click-left = sudo pkill openvpn

interval = 5
format-underline = ${colors.green}

